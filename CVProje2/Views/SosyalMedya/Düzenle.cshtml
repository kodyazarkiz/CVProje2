@model CVProje2.Models.entity.TblSosyalMedya
@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <h4>Sosyal Medya Hesapları Düzenleme Sayfası</h4>
    <br />
    <form method="post">
        @Html.Label("Sosyal Medya Adı")
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        <br />
        @Html.Label("Link")
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
        <br />
        @Html.Label("İkon")
        @Html.TextBoxFor(x => x.İkon, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
</div>
