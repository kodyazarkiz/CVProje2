<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f9;
            font-family: 'Poppins', sans-serif;
        }

        .table-hover tbody tr:hover {
            background-color: #808080;
            color: white;
            transform: scale(1.02);
            transition: 0.3s ease;
        }

        .table thead {
            background-color: #1ce419;
            color: white;
        }

        .table {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Kullanıcı Listesi</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Şifre</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            @foreach (var x in Model)
            {
                <tbody>
                    <tr>
                        <td>@x.ID</td>
                        <td>@x.KullaniciAdi</td>
                        <td>@x.Sifre</td>
                        <td><a href="/Kullanıcı/Sil/@x.ID" class="btn btn-danger"><i class="fas fa-trash"></i>Kaldır</a></td>
                        <td><a href="/Kullanıcı/Düzenle/@x.ID" class="btn btn-success"><i class="fas fa-pencil-alt"></i>Düzenle</a></td>
                        @*<td><span class="badge badge-success">Sil</span></td>*@
                    </tr>
                </tbody>
            }
        </table>
        <button class="btn btn-warning" style="margin-left: 5px; margin-top: 10px" data-toggle="modal" data-target="#Modal1">Yeni Kullanıcı Ekle</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>



<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Yeni Kullanıcı Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Kullanıcı/KullaniciEkle">
                <div class="modal-body">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="KullaniciAdi" class="form-control" />
                    <br />
                    <label>Şifre</label>
                    <input type="text" name="Sifre" class="form-control" />
                    <br />
                    <button class="btn btn-outline-danger">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>