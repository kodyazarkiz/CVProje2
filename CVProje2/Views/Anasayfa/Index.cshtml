<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yaratıcı Bootstrap Tablo</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f9;
            font-family: 'Poppins', sans-serif;
        }

        .table-hover tbody tr:hover {
            background-color: #6858bc9b;
            color: white;
            transform: scale(1.02);
            transition: 0.3s ease;
        }

        .table thead {
            background-color: #6c63ff;
            color: white;
        }

        .table {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Anasayfa Listesi</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Resim</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            @foreach(var x in Model) {
            <tbody>
                <tr>
                    <td>@x.ID</td>
                    <td>@x.Ad</td>
                    <td>@x.Soyad</td>
                    <td>@x.Baslik</td>
                    <td>@x.Aciklama</td>
                    <td>@x.Resim</td>
                    <td><a href="/Anasayfa/AnasayfaSil/@x.ID" class="btn btn-danger"><i class="fas fa-trash"></i>Sil</a></td>
                    <td><a href="/Anasayfa/AnasayfaGetir/@x.ID" class="btn btn-success"><i class="fas fa-pencil-alt"></i>Düzenle</a></td>
                    @*<td><span class="badge badge-success">Sil</span></td>*@
                </tr>
            </tbody>
            }
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>


