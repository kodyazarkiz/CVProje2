@using CVProje2.Models.entity
@model List<TblProjeler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div>
                        @foreach (var x in Model)
                        {
                            <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <div class="timeline timeline-inverse">
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @x.Kategori
                                            </span>
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    <img href="@x.Bağlantı" src="@x.Resim" />
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Proje/ProjeGetir/@x.ID" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i> Düzenle</a>
                                                    <a href="/Proje/ProjeSil/@x.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <a href="/Proje/ProjeEkle" class="btn btn-outline-success" style="margin-left: 5px">Yeni Proje Ekle</a>
    </section>
</body>
</html>

